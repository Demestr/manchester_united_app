<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/news_title"
            style="@style/NewsItemTitleStyle"
            android:textAppearance="@style/ManUtd.TextAppearance.NewsTitle"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/news_image"
            app:layout_constraintDimensionRatio="w,1:4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/news_image"
            tools:text="Title" />

        <TextView
            android:id="@+id/news_date"
            app:layout_constraintStart_toStartOf="@id/news_image"
            app:layout_constraintTop_toBottomOf="@id/news_image"
            tools:text="Date"
            style="@style/NewsItemDateStyle" />

        <TextView
            android:id="@+id/news_text"
            style="@style/NewsItemBodyStyle"
            android:maxLines="3"
            android:textAppearance="@style/ManUtd.TextAppearance.NewsBody"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_date"
            tools:text="The project youâ€™ll work with, Jokes, is an app that shows you a list of jokes. You can pick a joke to create an image with" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>