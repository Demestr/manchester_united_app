<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fullnews.FullNewsFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_full_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_full_news"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txt_title_full_news"
                style="@style/NewsItemTitleStyle"
                android:textAppearance="@style/ManUtd.TextAppearance.NewsTitle"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@id/image_full_news"
                app:layout_constraintDimensionRatio="w,1:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/image_full_news"
                tools:text="Title" />
            <TextView
                android:id="@+id/txt_date_full_news"
                app:layout_constraintStart_toStartOf="@id/image_full_news"
                app:layout_constraintTop_toBottomOf="@id/image_full_news"
                style="@style/NewsItemDateStyle" />
            <TextView
                android:id="@+id/txt_text_full_news"
                style="@style/NewsItemBodyStyle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_date_full_news"
                android:textSize="18sp"
                android:textAppearance="@style/ManUtd.TextAppearance.NewsBody"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>